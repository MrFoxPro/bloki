{
   "version": "0.2.0",
   "configurations": [
      {
         "name": "Frontend",
         "request": "launch",
         "runtimeArgs": [
            "dev:frontend"
         ],
         "runtimeExecutable": "pnpm",
         "skipFiles": [
            "<node_internals>/**"
         ],
         "type": "pwa-node"
      },
      {
         "internalConsoleOptions": "neverOpen",
         "name": "Server",
         "request": "launch",
         "cwd": "${workspaceFolder}/server",
         "restart": true,
         "runtimeExecutable": "nodemon",
         "outputCapture": "std",
         "skipFiles": [
            "<node_internals>/**"
         ],
         "type": "pwa-node"
      },
   ],
   "compounds": [
      {
         "name": "Start all",
         "configurations": [
            "Frontend",
            "Server",
         ],
         "stopAll": true,
      }
   ]
}