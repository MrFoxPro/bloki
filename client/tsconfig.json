{
   "extends": "../tsconfig.base.json",
   "compilerOptions": {
      "outDir": "./dist/backend",
      "isolatedModules": true,
      "baseUrl": "./",
      "jsx": "preserve",
      "jsxImportSource": "solid-js",
      // Misc
      "forceConsistentCasingInFileNames": true,
      "paths": {
         "@/*": [
            "./*"
         ],
      },
      "types": [
         "vite/client",
      ],
   },
   "exclude": [
      "node_modules",
      ".vscode",
      "assets",
      ".git",
      "temp",
      "dist"
   ]
}
