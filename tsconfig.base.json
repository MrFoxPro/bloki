{
	"compilerOptions": {
		"noErrorTruncation": true,
		"strict": false,
		// Target and output
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		// Typechecking
		// "noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		// "importHelpers": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
	},
	"exclude": [
		"node_modules"
	],
}